
<div class="container">
<h1>Tasks</h1>
<p><%= link_to 'Create a new task', new_task_path, class: "create" %></p>

<ul>
  <% @tasks.each do |t| %>
  <li>
    <% if t.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%=link_to t.title, task_path(t)%>

    <%=link_to task_path(t), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </li>
  <% end %>
</ul>
</div>
